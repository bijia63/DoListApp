<Window x:Class="DoListApp.EditTodoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoListApp"
        mc:Ignorable="d"
        Title="EditTodoWindow" Height="400" Width="550">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="編集画面" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0" />
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="10,0,0,10">
            <TextBlock Text="タスク名"/>
            <TextBox x:Name="TaskNameTextBox" Width="440" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10,0,0,10">
            <TextBlock Text="締切日"/>
            <DatePicker x:Name="DueDatePicker" Width="200" HorizontalAlignment="Left"/>
            <TextBlock Text="ステータス" Margin="20,0,20,0" />
            <ComboBox x:Name="StatusComboBox" Width="100" HorizontalAlignment="Right">
                <ComboBoxItem Content="未完了" />
                <ComboBoxItem Content="完了" />
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="10,0,0,10">
            <TextBlock Text="詳細"/>
            <TextBox x:Name="DetailTextBox" Width="440" Height="80" AcceptsReturn="True" TextWrapping="Wrap" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="登録" Width="80" Margin="10,0" Click="Update_Click" />
            <Button Content="クリア" Width="80" Margin="10,0" Click="Clear_Click" />
            <Button Content="戻る" Width="80" Margin="10,0" Click="Back_Click" />
        </StackPanel>
    </Grid>
</Window>
